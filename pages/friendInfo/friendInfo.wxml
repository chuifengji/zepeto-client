<view class="person_container">

<view class="img_box" style="background-image: url({{model.src}})"></view>
<view class="majorinfo_box">From: {{model.major}}</view>

</view>

<view wx:if="{{hadbeenmyfriend}}" class="button_block">

<view class="btn_item_box">
<i class="searchImg iconfont iconxiangji" style="font-size:54rpx;"></i>
<text>去合照</text>
</view>

<view class="btn_item_box" bindtap="deleteFriend">
<i class="searchImg iconfont icondelete" style="font-size:56rpx;"></i>
<text>删除</text>
</view>

</view>
<view wx:else class="button_block">
<view class="btn_item_box" bindtap="addFriend">
<i class="iconfont iconjiahaoyou " style="font-size:60rpx;color:#00906A;" ></i>
<text style="color:#00906A;" >加好友</text>
</view>
</view>
