page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background-color: #f6f5fa;
}

.person_container{
  position: relative;
  width: 650rpx;
  height: 80%;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 0 50rpx;
}
.majorinfo_box{
  position: relative;
  width: 100%;
  height: 15%;
  text-align: center;
  /* font-family: PingFangSC-Semibold, PingFang SC; */
  font-weight: 500;
  font-size: 16px;
}
.img_box{
  position: relative;
  width: 100%;
  height: 85%;
  background-size: auto 90%;
  background-repeat: no-repeat;
  background-position: center center;
}

.button_block{
  width: 750rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn_item_box{
  width: 200rpx;
  height: 100rpx;
  display: flex;
  flex-direction:column;
  text-align: center;
   font-size: 25rpx;
   margin: auto;
}