/*  移植过来的部分**/
.touchWrap{
  transform-origin: center;
  position: absolute;
  z-index: 100;
}

.imgWrap {
  box-sizing: border-box;
  width: 100%;
  transform-origin: center;
  float: left;
  border: 5rpx transparent dashed;
}
.imgWrap image {
  float: left;
}
.touchActive .x {
  display: block;
}

.touchActive .o {
  display: block;
}

.x {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  z-index: 500;
  display: none;
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  font-weight: bold;
  color: #d1e3f1;
}
.o {
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  display: none;
  overflow: hidden;
  font-weight: bold;
  color: #d1e3f1;
}
.active {
  background-color: rgb(78, 114, 151);
}

.active view {
  border: none;
}
.touchActive {
  /* border: 4rpx #fff dashed; */
  z-index: 400;
}
.fixed {
position: absolute;
bottom: 0;
left: 0;
right: 0;
