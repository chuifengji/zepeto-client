/* pages/editSelf/editSelf.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
 .container_up {
  width: 100%;
  height: 60%;
  top: 0;
  position: relative;
}

.container_up .character_show {
  position: relative;
}

.container_up .character_show .personal_body {}

.container_up .character_show .personal_hair {}

.container_up .character_show .personal_face {}

.container_up .character_show .personal_overcoat {}

.container_up .character_show .personal_blouse {}

.container_up .character_show .personal_trouser {}

.container_up .character_show .personal_shoes {}

.container_up .character_show .personal_glasses {}


.container_down {
  width: 100%;
  height: 40%;
  position: relative;
  display: flex;
  flex-direction: column;
  bottom: 0;
}

.container_down .tool_type {
  position: relative;
  width: 100%;
  overflow: auto;
  height: 100rpx;
  top: 0;
  padding: 0 31rpx;
  display: inline-flex;
  align-items: center;
}

.container_down .tool_type .item {
  z-index: 999;
  font-size:52rpx;
  line-height:100rpx;
  margin-right: 54rpx;
  text-align: center;
}

.container_down .tool_items {
  display: flex;
  justify-content: space-between;
  align-content: flex-start;
  position: relative;
  width: 688rpx;
 left: 31rpx;
 right: 31rpx;
  flex-wrap: wrap;
  overflow-y: auto;
  margin-top: 20rpx;
}
.container_down .tool_items:after{
  content: ""; width: 168rpx; display: block; height:0; 
    /*只需要添加父元素的after伪元素中 高度0 ，宽度与item的宽一样*/
}
 .single_item {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  box-sizing: border-box;
  background-color:red;
  border-radius: 15rpx;
}
.btn_goto_photo{
  width: 128rpx;
  height: 128rpx;
  border-radius: 15rpx;
  border:6rpx solid rgba(0,144,106,1);
  text-align: center;
  line-height: 128rpx;
  box-sizing: border-box;
  display: inline-block;
  margin: 20rpx;

}